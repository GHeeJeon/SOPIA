{
	"name": "sopia",
	"version": "1.2.8",
	"description": "A Spooncast manager A.I Program",
	"main": "main.js",
	"scripts": {
		"start": "electron . DEBUG",
		"build:win32": "build --win --ia32",
		"pbuild:win32": "electron-packager . SOPIA --asar --overwrite --platform=win32 --arch=ia32 --out=release-builds --icon=\".\\sopia.ico\" --ignore=release-builds --ignore=media"
	},
	"build": {
		"productName": "SOPIA",
		"appId": "com.electron.sopia",
		"asar": true,
		"protocols": {
			"name": "sopia",
			"schemes": [
				"helloSOPIA"
			]
		},
		"win": {
			"target": [
				"zip",
				"nsis"
			],
			"icon": "./icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"directories": {
			"output": "dist/",
			"app": "."
		}
	},
	"repository": "https://github.com/tree-some/SOPIA",
	"keywords": [],
	"author": "tree-some",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^5.0.13",
		"electron-builder": "^21.2.0"
	},
	"dependencies": {
		"@google-cloud/text-to-speech": "^2.2.0",
		"axios": "^0.19.0",
		"electron-packager": "^14.0.6",
		"json-merger": "^1.1.2"
	}
}
